{
  "name": "@vtaits/react-color-picker",
  "version": "0.1.2",
  "description": "React Color Picker",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "/dist",
    "/es",
    "/lib"
  ],
  "scripts": {
    "start": "cross-env BABEL_ENV=dev webpack-dev-server",
    "build": "yarn build:cjs && yarn build:es && yarn build:css",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir lib --ignore \"src/**/__tests__\"",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es --ignore \"src/**/__tests__\"",
    "build:css": "postcss style/**/*.css --dir dist",
    "clean": "rm -rf lib es dist",
    "lib": "yarn clean && yarn babel",
    "babel": "babel --out-dir lib src",
    "prepare": "yarn clean && yarn build",
    "lint": "eslint src --ext .js,.jsx",
    "test": "yarn lint"
  },
  "keywords": [
    "react",
    "react-component",
    "color",
    "picker",
    "color-picker"
  ],
  "dependencies": {
    "@babel/runtime": "^7.16.3",
    "classnames": "^2.3.1",
    "drag-helper": "^1.3.6",
    "prop-types": "^15.7.2",
    "region": "^2.1.2",
    "tinycolor2": "^1.4.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "postcss": "^8.4.4",
    "postcss-cli": "^9.0.2",
    "precss": "^4.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "style-loader": "^3.3.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0"
  },
  "peerDependencies": {
    "react": "^16.3.0 || ^17.0.0",
    "react-dom": "^16.3.0 || ^17.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vtaits/react-color-picker.git"
  },
  "bugs": {
    "url": "https://github.com/vtaits/react-color-picker/issues"
  },
  "license": "MIT",
  "author": "Vadim Taits <taizvadim@gmail.com>"
}
